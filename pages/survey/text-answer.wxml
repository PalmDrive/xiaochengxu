<view class="row bg-gray">
  <text class="size-14 text-white bg-main-color task-number">{{index + 1}}</text>
  <text class="size-14 text-color1 pingfang-medium">{{question.attributes.content}}</text>
</view>

<view class="column">
  <image src="../../images/survey/引号.png" class="quotation"></image>
  <textarea class="size-14" placeholder="请输入内容" bindinput="onInput" data-qindex="{{index}}" maxlength="2000" wx:if="{{question.attributes.questionType.indexOf('text') !== -1}}" />

  <view class="pic-view row" wx:if="{{question.attributes.questionType.indexOf('pic') !== -1}}">
    <view class="pic-item1" wx:for="{{question.attributes.picurlList}}" wx:for-item="pic" wx:key="" wx:for-index="idx">
      <image src="../../images/survey/delete.jpg" class="delete" bindtap="delete" data-idx="{{idx}}" data-picid="{{pic.id}}" data-qindex="{{index}}"></image>
      <image src="{{pic.url}}" class="pic-item"></image>
    </view>
  </view>

  <view class="row bottom-view">
    <view class="row" bindtap="addPic" data-qindex="{{index}}" wx:if="{{question.attributes.questionType.indexOf('pic') !== -1}}">
      <image src="../../images/survey/照片.jpg" class="image-icon"></image>
      <text class="size-14 text-color3">添加图片</text>
    </view>
    <text class="size-14 text-color3" wx:if="{{question.attributes.questionType.indexOf('text') !== -1}}">{{question.attributes.inputCount}}/2000</text>
  </view>
</view>
