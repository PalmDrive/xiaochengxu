.container {
  background: white;
  font-family: PingFangSC-Regular;
  padding-bottom: 40px;
}

.top-tip {
  padding: 30px 30px 10px 30px;
}

.bg-gray {
  background: #F5F5F5;
  align-items: flex-start;
  padding: 8px 15px 0px 15px;
  margin-top: 10px;
  padding: 30px;
}

.title {
  margin-top: 10px;
  margin-bottom: 10px;
}

.description {
  margin-left: 25px;
}

.question-icon {
  width: 18px;
  height: 18px;
  margin-right: 20px;
  padding-top: 3px;
}

.question-text {
  width: 88%;
}

.section {
  padding: 30px;
}

.select-view-row {
  margin-bottom: 25px;
  align-items: flex-start;
}

.answer-view {
  margin-bottom: 30px;
  margin-left: 30px;
}

.main-color-green {
  margin-top: 5px;
}

.explain-view {
  margin-bottom: 20px;
}

.explain-icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

.button-row {
  position:fixed;
  bottom:0px;
  width:100%;
}

.button {
  padding: 15px 0px 15px 0px;
  text-align: center;
  width: 50%;
  display: inline;
}

.pre-button {
  border-right: 0.5px #ffffff solid;
}
