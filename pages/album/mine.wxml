<!--pages/my/my.wxml-->
<import src="../../templates/topic-list.wxml"/>

<view class="container">
  <view class="loading text-center" hidden="{{!loading}}">
    <text>数据加载中...</text>
  </view>

  <view hidden="{{loading}}">
    <view class="userinfo" wx:if="{{userInfo}}">
      <image class="userinfo-avatar" src="{{userInfo.profilePicUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname text-bold size-20">{{userInfo.wxUsername}}</text>
    </view>

    <view class="section-break"></view>

    <view class="section-title size-17">我的已购</view>

    <view wx:for="{{favoriteTopics}}" wx:for-item="group" wx:key>
      <image src="http://ailingual-production.oss-cn-shanghai.aliyuncs.com/pics/%E4%B8%83%E6%97%A5%E8%BE%91/%E5%B0%8F%E7%A8%8B%E5%BA%8F%E7%94%A8/%E5%88%97%E8%A1%A8%E5%B0%8F%E5%9B%BE/{{group.attributes.groupInfo.modalImage}}" wx:if="{{group.attributes.role === 'paid_group'}}" mode="widthFix" data-group="{{ group }}" bindtap="gotoPaidGroup" class="paid-group-pic"></image>
      <text class=" size-26 FZRUIZH_CUJW--GB1-0 image-bottom">手机摄影7日速成</text>
      <text class=" size-12 image-bottom">已经学到第4天</text>
      <view class="tip-line image-bottom">
        <view class="line {{index <= 4 ? 'line-blue' : 'line-gray'}}" wx:for="{{ group.topics.relationships.media.data}}" wx:for-item="medium"  wx:key=""></view>
      </view>
      <view class="section-break"></view>
    </view>

    <view class="loading text-center" hidden="{{!noMore}}">没有更多了</view>
    <view class="loading text-center" hidden="{{!loadingMore}}">更多数据加载中...</view>

    <view class="size-13 no-subscription text-center text-grey" hidden="{{favoriteTopics && favoriteTopics.length}}">暂无数据</view>
  </view>
</view>
