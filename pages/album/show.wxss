/* 已购买页面 */

.unlocked .locker-mask {
  display: none;
}

.locked .locker-mask {
  position: absolute;
  z-index: 50;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8) center no-repeat;
  background-size: 50px 62px;
  padding-top: 60px;
  align-items:center;
}
/*url(https://ailingual-production.oss-cn-shanghai.aliyuncs.com/pics/%E4%B8%83%E6%97%A5%E8%BE%91/lock_white.png)*/

.lock-img {
  width: 12px;
  height: 16px;
  margin-right: 5px;
}

.buy-button {
  padding-left: 20px;
  padding-right: 20px;
  padding-top: 10px;
  padding-bottom: 10px;
  border: 1px #ffffff solid;
  margin-top: 15px;
}

.top-view {
  text-align: center;
}

.top-title {
  padding: 20px 20px 0 20px;
  display: block;
}

.top-tip {
  margin-top: 12px;
  margin-bottom: 14px;
  height: 17px;
}

.list-container {
  height: 457px;
  width: 100%;
}

.topic {
  height: 410px;
  margin-left: 20px;
  margin-right: 20px;
  background-size: cover;
  background-position: center;
  position: relative;
  border-radius: 5px;
  box-shadow: 0px 2px 8px 2px #ccc;
  overflow: hidden;
}

.topic-info {
  height: 200px;
}

.head-img {
  border-radius: 16px;
  height: 32px;
  width: 32px;
}

.bottom-view {
  margin-top: 120px;
  margin-bottom: 3px;
  position: relative;
  z-index: 10;
}

.top-text {
  z-index: 2;
  position: relative;
}

.right-view {
  margin-left: 8px;
}

.ji-zhu-text {
  font-size: 10px;
  color: white;
  letter-spacing: 0.34px;
}

.ji-zhu-name {
  font-size: 12px;
  color: white;
  letter-spacing: 0.41px;
}

.mediums {
  height: 216px;
  flex-wrap: wrap;
  background: white;
}

.medium {
  position: relative;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  padding: 10px;
  height: 108px;
}

.medium-50 {
  width: 50%;
}

.medium-100 {
  width: 100%;
}

.medium-gray {
  background: #EDEDED;
}

.medium-title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.medium-banner {
  padding-left: 20px;
  padding-top: 3px;
  background-size: cover;
  background-position: center;
  position: relative;
  height: 200px;
}

.medium-banner-mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(50, 50, 50, 0.4);
}

.label-trial {
  background-color: #59AA00;
  padding: 7px 10px 7px 28px;
  border-radius: 0 3px 3px 0;
  position: absolute;
  left: 0;
  top: 12px;
}

.count-view {
  align-items: flex-end;
  justify-content: space-between;
  padding: 20px;
}

.subscriber-profile-image {
  border-radius: 10px;
  height: 20px;
  width: 20px;
  margin-left: -7px;
  border: 1px #ffffff solid;
  box-shadow: 0px 2px 8px 2px #ccc;
}

.text-subscribers-count {
  margin-left: 10px;
}

.bottom-tip {
  letter-spacing: 0.34px;
  display: inline-block;
  margin-left: 60px;
}

.line {
  height: 1px;
  width: 40px;
}

.tip-line {
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
  flex-direction: row;
  margin: 0 20px 20px 20px;
}

.line-blue {
  background-color: #0090E7;
}

.line-gray {
  background-color: rgba(0, 0, 0, 0.05);
}


/* modal */
.modal-bg {
  width: 290px;
  height: 310px;
}

.modal button {
  padding: 12px 0;
  width: 244px;
  background-color: #0090E7;
  text-align: center;
  position: absolute;
  top: 230px;
  left: 50%;
  transform: translateX(-50%);
}
/* modal end */
