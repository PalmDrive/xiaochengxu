page {
  background: #F2F2F2;
}

.top-view {
  text-align: center;
}

.top-title {
  margin-top: 20px;
  display: block;
}

.top-tip {
  margin-top: 12px;
  margin-bottom: 14px;
}

.list-container {
  height: 457px;
  width: 100%;
}

.topic {
  height: 417px;
  border-radius: 3px;
  margin-left: 20px;
  margin-right: 20px;
  background-size: cover;
  background-position: center;
}

.topic-info {
  height: 200px;
}

.head-img {
  border-radius: 16px;
  height: 32px;
  width: 32px;
}

.bottom-view {
  margin-top: 120px;
  margin-bottom: 3px;
}

.top-text {
  z-index: 2;
  position: relative;
}

.right-view {
  margin-left: 8px;
}

.ji-zhu-text {
  font-size: 10px;
  color: white;
  letter-spacing: 0.34px;
}

.ji-zhu-name {
  font-size: 12px;
  color: white;
  letter-spacing: 0.41px;
}

.mediums {
  height: 216px;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  flex-wrap: wrap;
  background: white;
}

.medium {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  padding: 10px;
  height: 108px;
}

.medium-50 {
  width: 50%;
}

.medium-100 {
  width: 100%;
}

.medium-gray {
  background: #EDEDED;
}

.medium-banner {
  padding-left: 20px;
  padding-top: 3px;
  background-size: cover;
  background-position: center;
  position: relative;
  height: 200px;
}

.medium-banner-mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(50, 50, 50, 0.4);
}

.count-view {
  align-items: flex-end;
  justify-content: space-between;
  padding: 20px;
  padding-top: 8px;
}

.other-user-img {
  border-radius: 9px;
  height: 18px;
  width: 18px;
  margin-left:-9px;
}

.bottom-tip {
  letter-spacing: 0.34px;
  display: inline-block;
  margin-left: 60px;
}

.line {
  height: 1px;
  width: 40px;
}

.tip-line {
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
  flex-direction: row;
  margin-left: 20px;
  margin-right: 20px;
}

.line-blue {
  background-color: #0090E7;
}

.line-gray {
  background-color: rgba(0, 0, 0, 0.05);
}


/* modal */
.modal-bg {
  width: 290px;
  height: 310px;
}

.modal button {
  padding: 12px 0;
  width: 244px;
  background-color: #0090E7;
  text-align: center;
  position: absolute;
  top: 230px;
  left: 50%;
  transform: translateX(-50%);
}
/* modal end */