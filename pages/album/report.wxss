.user-view {
  padding: 40px 0px 35px 0px;
  align-items: center;
}

.user-img {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-bottom: 15px;
}

.sum-up {
  padding: 0px 25px 50px 25px;
  line-height: 32px;
}

.answer-view {
  padding-bottom: 40px;
}

.bg-gray {
  background: #F5F5F5;
  padding: 15px;
  margin-bottom: 25px;
}

.complete-img {
  width: 25px;
  height: 25px;
  margin-right: 10px;
}

.short-title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow:hidden;
}

.sub-title {
  width: 100%;
  text-align: right;
}

.answer-view {
  padding: 0px 25px 40px 25px;
}

.answer-img {
  width: 100%;
  margin-top: 20px;
  margin-bottom: 15px;
  border: 1px solid #42BD56;
}

.answer-text {
  padding: 0px 25px 15px 25px;
  line-height: 32px;
}
