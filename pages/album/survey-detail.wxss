.container {
  background: white;
  font-family: PingFangSC-Regular;
}

.section {
  padding: 15px 15px 30px 15px;
}

.task-title {
  padding: 2px 10px 2px 20px;
  margin-top: 20px;
  width:25px;
}

.task-row1 {
  margin: 20px 0px 15px 0px;
  justify-content: space-between;
}

.baby {
  width: 28px;
  height: 28px;
  border-radius: 50%;
  margin-right: 5px;
}

.second-tip {
  margin-bottom: 5px;
}

.task-row2 {
  padding-bottom: 20px;
}

.bg-gray {
  background: #F5F5F5;
  align-items: flex-start;
  padding: 8px 15px 8px 15px;
  margin-top: 10px;
}

.task-number {
  padding: 0px 7px 0px 7px;
  margin-right: 15px;
}

.quotation {
  width: 20px;
  height: 15px;
  margin-top: 15px;
  margin-bottom: 15px;
}

textarea {
  height: 130px;
}

.commit-button {
  border-radius: 3px;
  padding: 10px 20px 10px 20px;
  margin-bottom: 40px;
}
