/* 支付页面 */
.pay {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.pay .mask {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  z-index: 10;
  background: rgba(0,0,0,0.70);
}

.pay .pay-container {
  position: absolute;
  width: 96%;
  left: 2%;
  padding: 15px;
  /*height: 294px;*/
  bottom: 1%;
  background: #FFFFFF;
  border-radius: 8px;
  z-index: 10;
}

.pay .remarks {
  color: #85858D;
}
.pay .line {
  width: 100%;
  height: 1px;
  margin: 15px 0px;
  background: #EDEDED;
}

.pay button {
  background: #0BB908;
  border-radius: 3px;
  color: #fff;
}

