@import "./questions.wxss"

.user-photo {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}

.top {
  padding: 0px 30px;
}

.top-user {
  position: relative;
  margin-top: 40px;
}

.pk-hat {
  position: absolute;
  top: -15px;
  width: 32px;
  height: 30px;
  transform: rotate(40deg)
}

.pk-hat-left {
  left: 40px;
}

.pk-hat-right {
  right: -15px;
}

.vs-small {
  width: 156px;
  height: 87px;
}

.vs-result {
  width: 180px;
  height: 52px;
  margin-bottom: 25px;
}

.vs-success {
  height: 100px;
}

.atk .size-12 {
  text-align:center;
  margin-top: 5px;
}

.atk .size-28 {
  border: 3px solid #fff;
  padding: 5px 0px 5px 10px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

progress {
  width: 49%;
  margin-top: 25px;
}

.record {
  margin: 5px 0px;
}

.record {
  color: #00FFC6 100%;
}

.record-padding .size-20 {
  width: 60px;
  text-align: center;
}

.pk-hint {
  with: 100%;
  text-align: center;
}

.btn-share2, .btn-share1 {
  border-radius: 5px;
  width: 80%;
}

.btn-share1 {
  margin-top: 60px;
  background: #FFFFFF;
}

.btn-share2 {
  margin-top: 10px;
  background: #CD2D00;
}

.result .btn {
  margin-top: 10px;
}

.show {
  display: block;
}

.hide {
  display: none;
}

.text-right {
  margin-top: 20px;
}
