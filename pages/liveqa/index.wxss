.view-container {
  background: #1e0e39 url('https://cdn.ailingual.cn/pics/liveqa/bg2.jpg') top/contain no-repeat;
  padding: 20px 15px;
  color: white;
  font-size: 16px;
}

.title-and-schedule-container {
  position: relative;
}

.title-and-schedule-container .cover {
  position: absolute;
  top: -20px;
  left: -15px;
  bottom: 0;
  right: -15px;
  background-color: rgba(25,0,76,0.87);
  z-index: 10;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.title-and-schedule-container .cover button {
  color: white;
  background-color: #FF2C79;
}

.liveqa-title,
.liveqa-subtitle {
  display: block;
  margin: 0 auto;
}

.liveqa-title {
  width: 320px;
  height: 330px;
}

.liveqa-subtitle {
  width: 160px;
  height: 29px;
}

.timer {
  width: 183px;
  height: 40px;
  background: url('http://cdn.ailingual.cn/pics/liveqa/banner_bg.png') center/cover no-repeat;
  margin: 0 auto;
  text-align: center;
  padding-top: 7px;
  position: absolute;
  top: -18px;
  left: 50%;
  transform: translateX(-50%);
}

.btn-start {
  background-color: #FF9B00;
  border-radius: 5px;
  width: 100%;
  padding: 12px 0;
  color: white;
  margin: 30px auto 60px auto;
}

.btn-start text {
  line-height: 150%;
}

.schedule {
  position: relative;
  margin: 35px auto;
  padding: 35px 25px 15px 25px;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 5px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.schedule .list {
  padding: 5px 0;
}

.schedule .list text {
  line-height: 22px;
  vertical-align: middle;
}

.schedule button {
  width: 117px;
  font-size: 16px;
  background-color: #FEE300;
}

.label {
  font-size: 12px;
  line-height: 22px;
  padding: 0 5px;
  border-radius: 2px;
  text-align: center;
  margin-right: 5px;
  display: inline-block;
}

.user-photo {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  position: absolute;
  top: -25px;
  left: 50%;
  transform: translateX(-50%);
}

.card-container {
  border-radius: 10px;
  text-align: center;
  background-color: white;
  color: black;
}

.card-container .top-container {
  position: relative;
  background-color: #312B67;
  padding: 28px 0 3px 0;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  color: white;
}

.card-container .middle-container {
  border-bottom: 1px solid rgba(25,0,76,0.24);
}

.card-container .middle-container .col {
  width: 100%;
  border-right: 1px solid rgba(25,0,76,0.24);
  padding: 15px 0;
}

.card-container .middle-container .col.left {
  border-right: 100%;
}

.card-container .bottom-container {
  padding: 15px 0;
}

.card-container .bottom-container button {
  width: 227px;
  background-color: #FF5442;
  color: white;
  margin: 15px auto;
}

.rule-link {
  text-align: right;
  padding: 20px 0;
}

.leaderboard {
  padding: 20px 0;
  background-color: #31303d;
  color: rgba(255, 255, 255, 0.65);
  border-radius: 5px;
}

.leaderboard .hint {
  margin: 0 0 20px 15px;
}

.leaderboard-type {
  background-color: white;
  margin-bottom: 10px;
  border-radius: 5px;
  overflow: hidden;
}

.leaderboard-type .title {
  text-align: center;
  padding: 8px 0;
  color: #2E2C3B;
  width: 50%;
}

.leaderboard-type .title.active {
  color: white;
  background-color: #2E2C3B;
}

.table-head {
  margin-bottom: 5px;
}

.table-row {
  justify-content: space-around;
  padding: 5px 0;
}

.table-body {
  color: rgba(255,255,255,0.65);
}

.table-row text {
  display: block;
  width: 125px;
  text-align: center;
}

.table-row .ranking {
  width: 30px;
}

.icon-arrow-right {
  width: 10px;
  height: 19px;
}

.school-selector-view {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #1b004c;
  z-index: -100;
  padding: 20px;
  overflow: hidden;
}

.school-selector-view.show {
  z-index: 100;
}

.input-school-name {
  background-color: white;
  padding: 5px 10px;
  border-radius: 5px;
  margin-top: 20px;
}

.school-list {
  margin: 10px 0px;
  background-color: white;
}

.school-list-item {
  padding: 10px;
  border-bottom: 1px solid #1b004c;
  color: #1b004c;
}

.school-list-item.pressed {
  background-color: #1b004c;
  color: white;
}

.school-selector-view .btn-success {
  position: fixed;
  bottom: 20px;
  left: 20px;
  right: 20px;
}
