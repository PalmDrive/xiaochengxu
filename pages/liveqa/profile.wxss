.profile {
  background-color: #0091D6;
  padding: 20px;
  color: white;
  line-height: 150%;
}

.profile-photo {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  /*margin: 10px auto;*/
}

.card-container {
  border-radius: 10px;
  text-align: center;
  background-color: white;
  color: black;
  margin-top: 30px;
}

.card-container .top-container {
  position: relative;
  background-color: #4DB2E2;
  padding: 12px 0;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  color: white;
}

.card-container .middle-container {
  border-bottom: 1px solid rgba(25,0,76,0.24);
  padding: 15px 0px;
}

.card-container .col .btn {
  width: 80%;
  margin-top: 20px;
  border-width: 0;
  font-size: 16px;
}

.btn-cash {
  background-color: #FF9B00;
  color: white;
  padding: 5px;
}


.card-container .col {
  width: 50%;
  align-items:center;
}

.card-container .col.left {
  border-right: 1px solid rgba(25,0,76,0.24);
}

.record {
  margin-bottom: 15px;
  line-height: 200%;
}

.record-content {
  color: rgba(255,255,255,0.85);
}

.title {
  margin: 45px 0 15px;
}

.subtitle {
  color: white;
}
