<view class="questions-view">
  <view hidden="{{state !== 0}}"> <!-- 答题中 start -->
    <view class="row size-16 space-between">
      <view class="round-label">
        <image src="https://cdn.ailingual.cn/pics/liveqa/heart.png" class="icon-heart" />
        <text>复活卡{{user.extraQALives || 0}}张</text>
      </view>
      <view class="round-label">
        <image src="https://cdn.ailingual.cn/pics/liveqa/coins.png" class="icon-coins" />
        <text>今日智商积分{{user.qaRewardToday.points}}</text>
      </view>
    </view>

    <view class="count-down">
      <view class="size-12">倒计时</view>
      <view class="size-24">{{timer}}S</view>
    </view>

    <view class="card {{question.selected ? 'selected' : ''}}">
    <!-- <view class="card selected"> -->
      <!-- <view class="status {{(status === '已超时' || status === '回答错误') ? 'red' : ''}}">{{status}}</view> -->
      <form bindsubmit="formSubmit" report-submit="true">
        <view class="size-18">
          <view class="question">{{question.content}}</view>
          <!-- <view wx:for="{{question.options}}" wx:for-item="option" bindtap="selectAnswer" data-option="{{option}}" wx:key="value" class="row space-between option size-16 {{!option.isRight && option.selected ? 'wrong' : ''}} {{option.isRight ? 'right' : ''}}">
            <text>{{option.label}}</text>
            <text class="icon icon-checkmark">✔</text>
            <text class="icon icon-x">✗</text>
          </view> -->
          <!-- <button form-type="submit">submit it</button> -->
          <button wx:for="{{question.options}}" wx:for-item="option" data-option="{{option}}" wx:key="value" class="row space-between option size-16 {{!option.isRight && option.selected ? 'wrong' : ''}} {{option.isRight ? 'right' : ''}}" form-type="submit">
            <text>{{option.label}}</text>
            <text class="icon icon-checkmark">✔</text>
            <text class="icon icon-x">✗</text>
          </button>

          <view class="hint size-16">点击选项，即可回答</view>
        </view>
      </form>
    </view>

    <image src="https://cdn.ailingual.cn/pics/liveqa/fight_new.png" class="icon-fight" />

    <view class="pager">
      <view class="row space-between size-14">
        <view wx:for="{{pager}}" wx:key class="pager-item">
          <view class="{{item.cash ? 'icon-red-envelop' : ''}} {{item.bonus ? 'icon-2x' : ''}}"></view>
          <view class="label {{item.active ? 'active' : ''}}">{{item.label}}</view>
        </view>
      </view>
    </view>
  </view><!-- 答题中 end -->

  <view hidden="{{state !== 1}}" class="result"><!-- 答题结束 start -->
    <image src="{{user.profilePicUrl}}" class="user-photo block"/>

    <view class="size-22 text-center title">本场斩获</view>
    <view class="result-list size-16">
      <view class="row">
        <text>智商积分</text>
        <text>{{user.qaRewardToday.points || 0}}</text>
        </view>
      <view class="row">
        <text>现金</text>
        <text>￥{{(user.qaRewardToday.cash || 0) / 100}}</text>
      </view>
    </view>

    <image src="https://cdn.ailingual.cn/pics/liveqa/fight_new.png" class="block icon-fight" />

    <button class="btn btn-round size-15 btn-extra-lives" bindtap="gotoReviveTasks">获得复活卡再战</button>

    <!-- <navigator class="size-16" url="/pages/liveqa/index">查看排行榜</navigator> -->

    <!-- <button class="btn btn-round btn-share size-15 text-red" open-type="share">考考你的朋友</button> -->
  </view><!-- 答题结束 end -->

  <view hidden="{{state !== 2}}" class="success-pass result">
    <image src="{{user.profilePicUrl}}" class="user-photo" />
    <view class="size-22">恭喜通关</view>
    <image class="icon-trophy" src="https://cdn.ailingual.cn/pics/liveqa/trophy.png" />
    <view class="size-15">
      <view>今日我为{{user.myLiveSchool.name}}贡献了{{user.qaRewardToday.points || 0}}点智商积分</view>
      <view>{{user.myLiveSchool.name}}已排到{{user.myLiveSchool.rtRanking}}名</view>
      <image src="https://cdn.ailingual.cn/pics/liveqa/fight_new.png" class="block icon-fight" />
      <button class="btn btn-share btn-round" bindtap="gotoSharedPosterForAllPass">炫耀一下</button>
      <view>今日已通关， 明日再来</view>
    </view>
  </view>

  <view class="modal-container" hidden="{{modal === 0}}">
    <view class="modal size-18" hidden="{{modal !== 1}}">
      <image src="https://cdn.ailingual.cn/pics/liveqa/coins_big.png" class="icon-coins-big" />
      <view>这下赚大了</view>
      <view>您的今日智商积分已翻倍!</view>
      <view class="size-16 text-red">今日智商积分: {{user.qaRewardToday.points}}</view>
    </view>

    <view class="modal size-18" hidden="{{modal !== 2}}">
      <image src="https://cdn.ailingual.cn/pics/liveqa/red_envelop_big.png" class="icon-red-envelop-big" />
      <view>恭喜您</view>
      <view>红包已经入账</view>
      <view class="size-16 text-red">红包价值: ￥{{reward.cash/100}}</view>
    </view>
  </view>
</view>
