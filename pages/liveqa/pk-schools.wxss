.pk-schools {
  background-color: #0091D6;
  padding: 20px 0px 20px 0px;
}

.size-22 {
  width: 25px;
}

.pk-count {
  margin-left: 20px;
}

.my-school {
  padding: 20px;
  border-bottom: 5px solid rgba(255,255,255,0.3);
  margin-bottom: 20px;
}

.school-row {
  padding: 10px;
  border-bottom: 0px solid #333;
  margin-bottom: 5px;
