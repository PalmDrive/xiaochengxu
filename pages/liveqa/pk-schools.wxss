}

.school-image {
  min-width: 50px;
  min-height: 50px;
  max-width: 50px;
  max-height: 50px;
  border-radius: 50%;
  margin: 0px 5px 0px 10px;
}

.coin {
  width: 10px;
  height: 11px;
  margin-right: 5px;
}

.pk-button {
  width: 55px;
