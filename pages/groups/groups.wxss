page {
  background: #F2F2F2;
  padding-bottom: 15px;
}

.create {
  margin-top: 5px;
  padding: 15px;
  color: #161616;
  font-size: 14px;
  line-height: 21px;
  background: #EFF9FF;
}

.create .createGroup {
  width: 100%;
  height: 50px;
  line-height: 50px;
  margin-top: 10px;
  text-align: center;
  font-size: 16px;
  letter-spacing: 1px;
  color: #FFFFFF;
  background: #0090E7;
}

.groups {
  padding: 0px 15px;
}

.group {
  margin-top: 15px;
  background: #ffffff;
}

.group-title {
  background: #795548;
  padding: 15px;
}

/* 标题 */
.group-name {
  display: block;
  font-size: 16px;
  color: #FFFFFF;
  letter-spacing: 1px;
  line-height: 16px;
}

/* 点击量 更新数量 */
.group-pageview,.group-update-count {
  display: inline-block;
  margin-top: 13px;
  opacity: 0.7;
  font-size: 10px;
  color: #FFFFFF;
  letter-spacing: 0.28px;
  line-height: 10px;
}

.group-update-count {
  margin-left: 30px;
}

.media {
  padding: 0 15px;
}

.medium {
  height: 63px;
  overflow: hidden;
  border-bottom: solid 1px #ededed;
  font-size: 14px;
  color: #161616;
  line-height: 63px;
}

.group-bottom {
  padding: 10px 15px;
}

.like-count {
  text-align: center;
  display: inline-block;
  width: 30%;
}

.shar-count {
  text-align: center;
  display: inline-block;
  width: 25%;
}

.icon {
  width: 12px;
  height: 12px;
}

.like-count text, .shar-count text {
  margin-left: 5px;
  font-size: 10px;
  color: #B0B0B9;
  letter-spacing: -0.57px;
}

.update-count {
  float: right;
  line-height: 22px;
  text-align: right;
  display: inline-block;
  width: 40%;
  font-size: 12px;
  color: #161616;
}

/* 暂时隐藏没有渲染的数据 */
.like-count, .shar-count, .group-pageview {
  opacity: 0;
}

.group-update-count {
  margin-left: -50px;
}

.create {
  display: none;
}
