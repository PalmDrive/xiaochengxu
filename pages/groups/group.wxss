/**/
.container {}
.date-title {
  text-align: center;
  height: 60px;
  line-height: 60px;
  color: #0090e7;
  font-size: 22px;
}

.line {
  background: #ededed;
}
.line-max {
  height: 5px;
}
.line-min {
  height: 1px;
}

/*
 * 新闻标题
**/
.news-title {
  height: 46px;
  line-height: 44px;
}

.news-title .logo {
  width: 15px;
  height: 15px;
  vertical-align: middle;
  border-radius: 50%;
}
.news-title .name {
  margin-left: 10px;
  font-size: 12px;
}

.medium-container {
  padding: 15px 20px;
  overflow: hidden;
}
/* 文章 */
.medium-title {
  font-size: 15px;
}
/* 文章发布日期 */
.medium-publishedAt {
  margin-top: 15px;
  font-size: 12px;
  color: #b0b0b9;
}

.new-media-count {
  width: 40%;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  position: fixed;
  line-height: 36px;
  margin-top: 70%;
  border-radius: 5px;
  background: #1878de;
}