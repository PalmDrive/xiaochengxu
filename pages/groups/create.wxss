page {
  background: #F2F2F2;
}

.container {
  padding: 15px;
}

.form {
  background: #FFFFFF;
}

.name {
  font-size: 16px;
  padding-bottom: 15px;
  border-bottom: solid 1px #EDEDED;
}

.detail {
  width: 100%;
  font-size: 14px;
  margin-top: 15px;
}

.text-number {
  font-size: 14px;
  color: #161616;
  letter-spacing: 0;
  text-align: right;
  margin: 20px 0;
}

button {
  height: 50px;
  line-height: 50px;
  background: #0090E7;
  font-size: 16px;
  color: rgba(255, 255, 255, 1);
  letter-spacing: 1px;

  border-radius: 0;
}

.button-hover {
  background: #0090E7;
  color: rgba(255, 255, 255, 0.6);
}

button:after {
  border: 0;
}


