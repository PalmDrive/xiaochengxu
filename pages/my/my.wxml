<!--pages/my/my.wxml-->
<import src="../../templates/topic-list.wxml"/>

<view class="container">
  <view class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname text-bold size-20">{{userInfo.nickName}}</text>
  </view>

  <view class="section-break"></view>

  <view class="section-title size-17">我的订阅</view>
  <template is="topicList" data="{{topics: favoriteTopics}}"></template>
  <view class="size-13 no-subscription text-center text-grey" hidden="{{favoriteTopics && favoriteTopics.length}}">暂无数据</view>
</view>
