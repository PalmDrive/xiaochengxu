.title {
  text-align: center;
  color: #157EFB;
  margin-bottom: 20px;
  display: block;
}

.alert {
  display: block;
  background-color: #157EFB;
  padding: 10px 20px;
  width: 245px;
  color: white;
  margin-bottom: 25px;
  border-radius: 0 27px 27px 0;
}

.leaderboard-row {
  display: flex;
  justify-content: space-between;
  padding: 8px 30px;
}

.leaderboard-row .left {
  width: 70px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.leaderboard-row .right {
  width: 215px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.profile-image {
  height: 35px;
  width: 35px;
}