<view>
  <swiper class="slide" indicator-dots="true" bindchange="changeSlide">
    <block wx:for="{{imgUrls}}" wx:key>
      <swiper-item>
        <image src="{{item}}" class="slide-image" mode="widthFix"/>
      </swiper-item>
    </block>
  </swiper>
  
  <button class="button-save" bindtap="saveImage">保存到相册后可发朋友圈</button>
  <button class="button-cancel" bindtap="cancel">取消</button>
</view>