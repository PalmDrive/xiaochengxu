.first-login-hint {
  position: fixed;
  bottom: 10px;
  z-index: 1;
  width: 100%;
  height: 110px;
}

.first-login-hint .hint {
  margin: auto;
  width: 315px;
  height: 80px;
  background: #0090E7;
  box-shadow: 0 11px 17px 0 rgba(0,0,0,0.13);
  border-radius: 8px;
  position: relative;
  padding: 12px 12px 7px 81px;
}

.first-login-hint .icon {
  width: 72px;
  height: 72px;
  position: absolute;
  left: 6px;
  top: 6px;
}

.first-login-hint .title {
  margin-bottom: 3px;
  line-height: 22px;
}

.first-login-hint .content {
  line-height: 18px;
}

.first-login-hint .close {
  width: 21px;
  height: 21px;
  position: absolute;
  right: -6px;
  top: -6px;
}