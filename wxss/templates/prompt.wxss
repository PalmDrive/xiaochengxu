
.prompt .masked {
  z-index: 10;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.70);
}

.prompt .container {
  margin: 70px auto;
  width: 255px;
  position: relative;
  background: #FFFFFF;
  border-radius: 3px;
  overflow: visible;
}

.prompt .text-container {
  padding: 15px;
}

.prompt button {
  width: 120px;
  height: 40px;
  line-height: 40px;
  margin-top: 25px;
}

.prompt .top-img {
  border-radius: 3px 3px 0px 0px;
  width: 100%;
  height: 97px;
}

.close-button {
  width: 33px;
  height: 33px;
  position: absolute;
  bottom: -55px;
  left: 0;
  right: 0;
  margin: 0 auto;
}

.prompt .title, .prompt .text {
  margin-left: 0;
  width: 100%;
  display: block;
  text-align: center;
}

.prompt .title {
  color: #0090E7;
}

.prompt .text {
  line-height: 24px;
  margin-top: 10px;
}

/* 弹窗 */
.coupon-container {
  position: absolute;
  width: 321px;
  padding: 0 0 18px 0;
  background: #DD3918;
  margin: 10% auto;
  left: 0;
  right: 0;
}
.coupon-container .title {
  text-align: center;
  color: #fff;
  margin: 18px 0 7px 0;
  line-height: 42px;
}

.coupon-container .subtitle {
  display: block;
  text-align: center;
  color: #fff;
}

.coupon-container .coupon {
  width: 276px;
  background: #FFFFFF;
  box-shadow: 0 3px 9px 0 rgba(0,0,0,0.15);
  margin: 15px auto;
  padding: 15px;
}

.coupon-container .value {
  font-size: 36px;
  color: #DF0A20;
  text-align: center;
  margin-bottom: 10px;
}

.coupon-container .range {
  text-align: center;
  padding: 5px 0;
}

.coupon-container .prompt {
  color: rgba(255,255,255,0.6);
  text-align: center;
}

.coupon-container .gift {
  text-align: center;
}

.coupon-container .gifter {
  line-height: 21px;
  background: #000;
  color: #fff;
  padding: 0px 5px;
  margin-right: 10px;
}

.coupon button {
  margin-top: 20px;
  width: 195px;
  height: 46px;
}

