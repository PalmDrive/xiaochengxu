/**app.wxss**/
@import "wxss/text.wxss";
@import "wxss/templates/topic-list.wxss";
@import "wxss/templates/homepage-topic-section.wxss";
@import "wxss/templates/medium-list.wxss";
@import "wxss/templates/medium-list-2.wxss";
@import "wxss/includes/hint.wxss";

.scroll-x {
  width: 100%;
  white-space: nowrap;
  overflow-x: scroll;
  -webkit-overflow-scrolling: touch;
}

.loading {
  margin-top: 50px;
  padding-bottom: 50px;
}

view {
  box-sizing: border-box;
}

.container {
  box-sizing: border-box;
  overflow-x: hidden;
} 

.d-ib {
  display: inline-block;
  vertical-align: top;
}

.icon-xs {
  width: 10px;
  height: 10px;
  padding: 0 3px;
}

.section-break {
  height: 6px;
  background: #F7F7F7;
}

.section-title {
  padding: 15px;
}

.break-line {
  height: 1px;
  background: rgba(216,216,216,0.30);
}

.img-cover {
  background-size: cover;
  background-position: center;
}

.loading {
  margin-top: 50px;
}

/*topic list*/

  .topics-header {
    padding: 15px;
  }

  .topic .break-line {
    margin: 0 15px;
  }
  

  .t-top {
    padding: 17px 20px 11px;
    position: relative;
  }

  .t-top-image {
    width: 54px;
    height: 54px;
    margin-right: 10px;
  }

  .t-top-text {
    position: absolute;
    left: 84px;
    top:0;
    height: 54px;
    margin-top: 17px;
  }

  .t-title {
    padding-top: 4px;
    margin-bottom: 10px;
    color: rgba(0,0,0,0.90);
  }

  .t-meta {
    letter-spacing: 0.33px;
    height: 14px;
  }

  .t-desc {
    margin: 0 20px 22px;
    color: rgba(26,26,26,0.68);
    line-height: 22px;
    max-height: 44px;
    overflow: hidden;
  }

.medium-list, .medium-list-2 {
  word-break: break-all;
}